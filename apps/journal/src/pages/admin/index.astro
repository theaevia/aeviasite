---
const ID_URL = import.meta.env.PUBLIC_NETLIFY_IDENTITY_URL || '';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Aevia Journal CMS</title>
  </head>
  <body>
    <!-- 1) Ensure the ?config= param is set BEFORE loading CMS -->
    <script is:inline>
      (function(){
        try {
          var params = new URLSearchParams(location.search);
          if (!params.get('config')) {
            var base = location.pathname.split('/admin')[0] || '';
            var cfg = base + '/config.yml';
            params.set('config', cfg);
            var newUrl = location.pathname + '?' + params.toString();
            history.replaceState(null, '', newUrl);
          }
        } catch (e) { /* no-op */ }
      })();
    </script>

    <!-- 2) Load Decap CMS & Netlify Identity as classic scripts (avoid ESM/CORS) -->
    <script is:inline>
      (function loadExternal(){
        var head = document.head || document.getElementsByTagName('head')[0];
        function add(src){
          var s = document.createElement('script');
          s.src = src;
          s.defer = true;
          head.appendChild(s);
        }
        // Decap CMS
        add('https://unpkg.com/decap-cms@^3.3.0/dist/decap-cms.js');
        // Netlify Identity widget
        add('https://identity.netlify.com/v1/netlify-identity-widget.js');
      })();
    </script>

    <!-- 3) Initialize Netlify Identity after it becomes available -->
    <script is:inline define:vars={{ ID_URL }}>
      (function initIdentity(){
        var ID = ID_URL;
        function ready(){
          try {
            if (!window.netlifyIdentity) { setTimeout(ready, 100); return; }
            if (ID) window.netlifyIdentity.init({ APIUrl: ID });
            else window.netlifyIdentity.init();
            window.netlifyIdentity.on('login', function(){ window.location.reload(); });
            window.netlifyIdentity.on('logout', function(){ window.location.reload(); });
          } catch (e) { /* no-op */ }
        }
        ready();
      })();
    </script>

    <!-- Debug removed for GitHub OAuth; Netlify Identity has its own devtools -->
  </body>
</html>

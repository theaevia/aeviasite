<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Aevia Journal CMS</title>
  </head>
  <body>
    <script>
      // Ensure the file-config URL param is present in prod & dev.
      // Compute base prefix dynamically so this works on both
      // - main domain (mounted at /journal) and
      // - Netlify site (mounted at /)
      (function(){
        try {
          var params = new URLSearchParams(location.search);
          if (!params.get('config')) {
            var base = location.pathname.split('/admin')[0] || '';
            var cfg = base + '/admin/config.yml';
            params.set('config', cfg);
            var newUrl = location.pathname + '?' + params.toString();
            history.replaceState(null, '', newUrl);
          }
        } catch (e) {}
      })();
    </script>
    <script src="https://unpkg.com/decap-cms@^3.3.0/dist/decap-cms.js"></script>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
      // Initialize Netlify Identity widget; optional APIUrl via PUBLIC_NETLIFY_IDENTITY_URL
      (function(){
        var ID_URL = "{import.meta.env.PUBLIC_NETLIFY_IDENTITY_URL || ''}";
        function init() {
          if (!window.netlifyIdentity) { setTimeout(init, 50); return; }
          try {
            if (ID_URL) window.netlifyIdentity.init({ APIUrl: ID_URL });
            else window.netlifyIdentity.init();
            window.netlifyIdentity.on('login', function(){ window.location.reload(); });
            window.netlifyIdentity.on('logout', function(){ window.location.reload(); });
          } catch (e) { console.warn('Netlify Identity init failed', e); }
        }
        init();
      })();
    </script>
    <!-- Debug removed for GitHub OAuth; Netlify Identity has its own devtools -->
  </body>
</html>

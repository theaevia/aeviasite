---
const ID_URL = import.meta.env.PUBLIC_NETLIFY_IDENTITY_URL || '';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Aevia Journal CMS</title>
  </head>
  <body>
    <!-- Point Decap CMS at the YAML config explicitly (works at /admin and /journal/admin) -->
    <link href="../config.yml" type="text/yaml" rel="cms-config-url" />

    <!-- Load Decap CMS as classic script (avoid ESM/CORS) -->
    <script is:inline>
      (function loadExternal(){
        var head = document.head || document.getElementsByTagName('head')[0];
        function add(src){
          var s = document.createElement('script');
          s.src = src;
          s.defer = true;
          head.appendChild(s);
        }
        // Decap CMS
        add('https://unpkg.com/decap-cms@^3.3.0/dist/decap-cms.js');
      })();
    </script>
    <!-- Using GitHub backend with Netlify OAuth; no Identity init needed -->
  </body>
</html>

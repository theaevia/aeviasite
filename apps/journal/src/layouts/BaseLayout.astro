---
import '../styles/global.css';
import Navigation from '@/components/Navigation';
const { title = 'Aevia Journal', description = 'Doctor-led aesthetics & longevity journal', ogImage } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    
    <!-- Fonts to match SPA -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap"
        rel="stylesheet"
      />
    </noscript>
  </head>
  <body class="bg-background text-foreground">
    <!-- Header: use the exact React Navigation component from the SPA -->
    <Navigation client:only="react" />

    <!-- Page content -->
    <main class="container max-w-6xl py-10 mt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="mt-8 border-t border-border/70">
      <div class="container max-w-6xl py-8 flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <p class="text-sm text-foreground/60">Â© {new Date().getFullYear()} Aevia. All rights reserved.</p>
        <nav class="flex items-center gap-4 text-sm text-foreground/70">
          <a href="/consultations" class="hover:text-foreground">Consultations</a>
          <a href="/treatments" class="hover:text-foreground">Treatments</a>
          <a href="/journal" class="hover:text-foreground">Journal</a>
        </nav>
      </div>
    </footer>
  </body>
</html>

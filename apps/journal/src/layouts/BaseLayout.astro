---
import '../styles/global.css';
import Navigation from '@/components/Navigation';
import JournalFooter from '../components/JournalFooter.astro';
import { withBase } from '../utils/withBase';
import { mainSiteUrl } from '../utils/mainSiteUrl';
import { SKIN_CONSULTATION_URL } from '@/lib/bookingUrls';

const DEFAULT_CONSULTATION_URL = mainSiteUrl(SKIN_CONSULTATION_URL);

const {
  title = 'The Aevia Journal',
  description = 'Doctor-led aesthetics & longevity journal',
  ogImage,
  chromeless = false,
  canonicalUrl
} = Astro.props;

// If ogImage is a local path ("/images/..."), make it absolute + base-aware
const ogImageAbsolute =
  typeof ogImage === 'string'
    ? (ogImage.startsWith('/')
        ? new URL(withBase(ogImage), Astro.site).toString()
        : ogImage)
    : undefined;

const canonicalHref = (() => {
  if (typeof canonicalUrl === 'string' && canonicalUrl.trim()) {
    const value = canonicalUrl.trim();
    if (/^[a-zA-Z][a-zA-Z0-9+.-]*:/.test(value)) {
      return value;
    }
    return new URL(value, Astro.site).toString();
  }
  return Astro.url.href;
})();

const mainClass = chromeless ? 'container max-w-6xl py-10' : 'container max-w-6xl py-10 mt-20';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalHref} />
    <link rel="icon" href={withBase('/favicon.ico')} />
    <link rel="icon" type="image/png" href={withBase('/favicon.png')} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImageAbsolute && <meta property="og:image" content={ogImageAbsolute} />}
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Fonts to match SPA -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <script is:inline>
      (function(w,d,e,u,f,l,n){w[f]=w[f]||function(){(w[f].q=w[f].q||[]).push(arguments);};l=d.createElement(e);l.async=1;l.src=u;n=d.getElementsByTagName(e)[0];n.parentNode.insertBefore(l,n);})(window,document,'script','https://assets.mailerlite.com/js/universal.js','ml');
      ml('account', '1767273');
    </script>
  </head>
  <body class={`bg-background text-foreground ${chromeless ? 'is-chromeless' : ''}`}>
    <!-- Header: SPA Navigation (be mindful of hardcoded '/journal' links in dev) -->
    {!chromeless && <Navigation client:only="react" showShadow={false} />}

    <!-- Page content -->
    <main class={mainClass}>
      <slot />
    </main>

    {!chromeless && <JournalFooter />}
  </body>
</html>

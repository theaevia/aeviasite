---
export interface Props {
  src: string;
  alt?: string;
  caption?: string;
  size?: 'small' | 'normal' | 'wide' | 'full';
  align?: 'left' | 'center';
}
const { src, alt = '', caption, size = 'normal', align = 'center' } = Astro.props as Props;
const base = import.meta.env.BASE_URL;
const url = src?.startsWith('http') ? src : `${base}${src.replace(/^\//,'')}`;
---
<figure class={`fig fig--${size} fig--${align}`}>
  <img src={src} alt={alt} />
  {caption && <figcaption>{caption}</figcaption>}
  
</figure>

